# ========================================
# CONFIGURACIÓN DE ENTORNO - EJEMPLO
# ========================================
# Copiar este archivo a .env y completar con valores reales
# NUNCA commitear .env con valores reales a Git

# ========== DJANGO CORE ==========
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-with-django

# Hosts permitidos (separados por comas, sin espacios)
# Desarrollo: localhost,127.0.0.1
# Producción: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (solo producción, con https://)
# Ejemplo: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# ========== LOCALIZATION ==========
TIME_ZONE=America/New_York
LANGUAGE_CODE=es

# ========== EMAIL CONFIGURATION ==========
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@spahotel.com
SERVER_EMAIL=admin@spahotel.com

